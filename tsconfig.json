{
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/types/.d.ts/moralis.d.ts"],
    "noUnusedParameters": false,
    "compilerOptions": {
        "outDir": "./dist", // Specify output directory
        "target": "esnext", // Target language version
        "useDefineForClassFields": true,
        "module": "esnext", // Template standard for generating code
        "moduleResolution": "node", // Module resolution strategy: TS uses node resolution strategy by default, that is, import in a relative way
        "strict": true, // Open all strict type checks
        "jsx": "preserve",
        "sourceMap": true, // Generate sourcemap file for target file
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": ["esnext", "dom"],
        "skipLibCheck": true,
        "baseUrl": "./", // Resolve the base address of the non relative module. The default is the current directory
        "paths": {
            // Path mapping, relative to baseurl
            "@/*": ["./src/*"]
            // If you do not want to use the default version when using JQ, but need to specify the version manually, you can configure it as follows
            // "jquery": ["node_modules/jquery/dist/jquery.min.js"]
        },
        "checkJs": false, // It is allowed to report errors in JS files. It is usually used with allowjs
        "removeComments": true // Delete Note
    }
}
